    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.NutrientesActivity"
        android:background="@color/grayOscuro">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10sp"
            android:background="@color/grayOscuro">

            <Button
                android:id="@+id/volverPerfilActivityB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="@string/backActivity"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/datos_biom_tricos"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMenos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="10sp"
                android:textSize="20sp"
                android:text="-"
                android:onClick="restarPeso" />


            <TextView
                android:layout_marginTop="20sp"
                android:id="@+id/txtPesoUserB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:background="@color/grayOscuro"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="47sp"
                android:textColor="@color/white"
                />

            <Button
                android:id="@+id/btnMas"
                android:layout_width="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="15sp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="+"
                android:onClick="sumarPeso" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:textColor="@color/white"
            android:text="@string/peso_kg"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMenosAltura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="10sp"
                android:textSize="20sp"
                android:text="-"
                android:onClick="restarAltura" />


            <TextView
                android:layout_marginTop="20sp"
                android:id="@+id/txtAlturaUserB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:background="@color/grayOscuro"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="47sp"
                android:textColor="@color/white"
                />

            <Button
                android:id="@+id/btnMasAltura"
                android:layout_width="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="15sp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="+"
                android:onClick="sumarAltura" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:text="@string/altura_cm"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMenosEdad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:layout_marginTop="10sp"
                android:textSize="20sp"
                android:text="-"
                android:onClick="restarEdad" />


            <TextView
                android:layout_marginTop="20sp"
                android:id="@+id/txtEdadUserB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:background="@color/grayOscuro"
                android:layout_weight="3"
                android:gravity="center"
                android:textSize="47sp"
                android:textColor="@color/white"
                />

            <Button
                android:id="@+id/btnMasEdad"
                android:layout_width="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="15sp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="+"
                android:onClick="sumarEdad" />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:textAllCaps="true"
            android:textSize="15sp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:text="Edad"
            />




    </LinearLayout>
